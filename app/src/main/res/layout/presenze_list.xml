<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/id_presenza"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:padding="1dp"
            android:text=""
             android:visibility="gone" />

        <TextView
            android:id="@+id/visitatore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:padding="1dp"
            android:text=""
            android:textSize="16sp"
            android:textStyle="bold" />

    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:padding="1dp"
            android:text="Azienda"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/azienda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:padding="1dp"
            android:text=""
            android:textSize="16sp" />

    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:padding="1dp"
            android:text="@string/si_trova_presso"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/dipendente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:padding="1dp"
            android:text=""
            android:textSize="16sp" />

    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:padding="1dp"
            android:text="Ora entrata:"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/ora_entrata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:padding="1dp"
            android:text=""
            android:textSize="16sp" />

    </TableRow>

    <TableRow>
        <LinearLayout
            android:layout_span="2"
            android:layout_weight="1"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:orientation="horizontal">

            <Button
            android:id="@+id/button1"
            android:text="Accogli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:textSize="10sp"
            android:focusable="false"
            android:background="@color/accogli"
             />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:text="Respingi"
            android:textSize="10sp"
            android:focusable="false"
            android:background="@color/respingi"/>

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:text="Trasferisci"
                android:textSize="10sp"
                android:focusable="false"
                android:background="@color/trasferisci"/>

    <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:text="Uscita"
                android:textSize="10sp"
                android:focusable="false"
                android:background="@color/uscita"/>
        </LinearLayout>
    </TableRow>
</TableLayout>
